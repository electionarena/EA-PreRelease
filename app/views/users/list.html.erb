<% @page_title = "Users List" %>

<div class="user list">
  
  <!--%= link_to("Add New User", {:action => 'new'}, :class => 'action new') %-->
  
  <table class="listing" summary="User list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>e-mail</th>
      <th>Type</th>      
      <th>Date Registered</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>      
      <td><%= user.user_type %></td>      
      <td><%= user.created_at %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
