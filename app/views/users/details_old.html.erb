<div class="content">
  <div class="contentIn">
    <div class="leftBlock">
      <h2 class="darkHeader">WELCOME <%= @user.kind.capitalize! %></h2>
      <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam.</p>
      <div class="bigAreana"></div>
    </div>

    <div class="rightBlock">
      <h2 class="darkHeader">Please fill your name & email</h2>
      <div class="loginBlockIn1">

        <%= form_for(@user, :url => {:action => 'create'}) do |f| %>
          <%= f.hidden_field(:kind, :value => @user.kind) %>

          <%= f.text_field(:first_name, :value => "First Name") %>
          <div class="clear"></div>
          <%= f.text_field(:last_name, :value => "Last Name") %>
          <div class="clear"></div>
          <%= f.text_field(:email, :value => "e-mail") %>
          <span style="margin: 0;">Note: Email will not be publicly displayed and never shared</span>

          <div class="clear"></div>
          
          <span class="spt1">
          <%= f.check_box(:accept_terms) %>
          <!--input type="checkbox" class="lbiCheck" checked /-->
          I agree to the <a href="/users/terms">Terms &amp; Conditions</a> and the <a href="/users/policy">Privacy Policy</a></span>

          <div class="clear"></div>
          </br>				

          <%= submit_tag("Submit" ) %>

          <div class="clear"></div>

          <%= error_messages_for(@user) %>

        <% end %>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>
